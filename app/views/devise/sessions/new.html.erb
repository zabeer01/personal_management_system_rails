<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <h2 class="text-center bg-success text-white p-3 rounded-top">Log in</h2>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: 'control-label mb-1' %>
              <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: 'control-label mb-1' %>
              <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Log in", class: 'btn btn-dark btn-block btn-sm' %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
