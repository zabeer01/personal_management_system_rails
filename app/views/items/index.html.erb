

<%= link_to "New item", new_item_path %>
<!--xwx-->
<h1></h1>
<table id="datatable" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr id="<%= dom_id item %>">
        <td><%= item.name %></td>
        <td><%= item.category %></td>
         <td>
       <div class="btn-group" role="group" aria-label="Item Actions">
          <%= link_to item do %>
        <i class="fa-solid fa-eye show-button"></i>
          <% end %>
          <%= link_to edit_item_path(item) do %>
            <i class="fas fa-edit edit-button"></i>
          <% end %>
       <%= button_to '', item, method: :delete, data: { confirm: "Are you sure?" }, class: "fa-solid fa-trash delete-button" %>

        </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :javascript do %>
  <script>
    $(document).ready(function() {
      var dtable = $("#datatable").DataTable();
    });
  </script>
<% end %>
