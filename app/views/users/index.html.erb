<h1>All Users</h1>

<table id="datatable" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>user_name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td>
       <div class="btn-group" role="group" aria-label="Item Actions">
          <%= link_to user do %>
        <i class="fa-solid fa-eye show-button"></i>
          <% end %>
          <%= link_to edit_user_path(user) do %>
            <i class="fas fa-edit edit-button"></i>
          <% end %>
       <%= button_to '', user, method: :delete, data: { confirm: "Are you sure?" }, class: "fa-solid fa-trash delete-button" %>

        </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

