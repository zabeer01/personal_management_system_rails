<!-- index.html.erb -->
<div class="container">
  <% @items.group_by(&:category).each do |category, items_by_category| %>
   <h2 class="text-center"><%= category %></h2>
    <div class="row">
      <% items_by_category.sort_by(&:created_at).reverse.take(6).each do |item| %>
        <div class="col-md-2 mb-4">
          <a href="<%= item_path(item) %>">
            <div class="card" style="width: 100%;">
              <!-- Assuming item.image_url contains the URL of the item's image -->
              <% if item.image_url.present? %>
                <%= image_tag item.image_url, alt: item.name, class: "img-fluid rounded", style: "max-width: 200px;" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <!-- Add other item attributes here -->
                <p class="card-text"><%= item.details %></p>
                <!-- You can remove the button if clicking the whole card should navigate -->
                <!-- <a href="<%= item_path(item) %>" class="btn btn-primary">View Details</a> -->
              </div>
             
            </div>
          </a>
        </div>
      <% end %>
    </div>
    
  <% end %>
  
</div>

